<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="background">@color/secondaryLightColor</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="recyclerview_main">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">@dimen/big_margin</item>
        <item name="android:padding">@dimen/medium_padding</item>
    </style>

    <style name="fab_add_main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
        <item name="android:contentDescription">@string/add_word</item>
    </style>

    <style name="fab_news_main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
        <item name="android:backgroundTint">@color/secondaryColor</item>
        <item name="android:contentDescription">@string/go_api</item>
    </style>

    <style name="fab_delete_main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin</item>
        <item name="android:backgroundTint">@android:color/holo_red_dark</item>
        <item name="android:contentDescription">@string/delete</item>
    </style>

    <style name="edit_news_main">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/medium_margin</item>
        <item name="android:layout_marginEnd">@dimen/big_margin</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin</item>
        <item name="android:inputType">textAutoComplete</item>
    </style>

    <style name="item_word_main">
        <item name="android:textSize">24sp</item>
        <item name="android:background">@color/primaryLightColor</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/xx_small_margin</item>
        <item name="android:padding">@dimen/x_small_padding</item>
    </style>

    <style name="edit_word_add">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
        <item name="android:layout_marginStart">@dimen/medium_margin</item>
        <item name="android:layout_marginTop">@dimen/big_margin</item>
        <item name="android:layout_marginEnd">@dimen/medium_margin</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:inputType">textAutoComplete</item>
        <item name="android:minHeight">@dimen/min_height</item>
        <item name="android:textSize">@dimen/text_size_add_word</item>
    </style>

    <style name="button_save_word_add">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
        <item name="android:layout_marginStart">@dimen/medium_margin</item>
        <item name="android:layout_marginTop">@dimen/save_button_top_margin</item>
        <item name="android:layout_marginEnd">@dimen/medium_margin</item>
    </style>

    <style name="recyclerview_news">
        <item name="android:layout_margin">@dimen/x_small_margin</item>
        <item name="android:transitionGroup">true</item>
    </style>

    <style name="no_internet_image_news">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/it_shows_there_is_no_connection</item>
    </style>

    <style name="oops_internet_news">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/x_small_margin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/text_size_oops</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="check_internet_text_news">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/text_size_check_internet</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="main_card_item_news">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/news_item_height</item>
        <item name="android:layout_margin">@dimen/x_small_margin</item>
        <item name="android:backgroundTint">@color/secondaryColor</item>
        <item name="android:elevation">@dimen/medium_elevation</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="sub_card_item_news">
        <item name="android:layout_width">@dimen/image_news_item_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/x_small_margin</item>
        <item name="android:layout_marginBottom">@dimen/x_small_margin</item>
    </style>

    <style name="image_item_news">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:contentDescription">@string/article_image</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="title_item_news">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginEnd">@dimen/small_margin</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">3</item>
        <item name="android:textSize">@dimen/text_size_title_article_item</item>
    </style>

    <style name="date_item_news">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/x_small_margin</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/text_size_date_article_item</item>
    </style>

    <style name="arrow_item_news">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">
            @string/this_image_means_you_can_open_up_this_article
        </item>
    </style>

    <style name="image_detail_news">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/image_news_detail_height</item>
        <item name="android:contentDescription">@string/picture_describing_the_news</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="swipe_text_detail_news">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/small_padding</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="content_detail_news">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/big_margin</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">@dimen/small_padding</item>
        <item name="android:paddingRight">@dimen/small_padding</item>
    </style>

    <style name="full_article_button_detail_news">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">@dimen/big_margin</item>
    </style>
</resources>
